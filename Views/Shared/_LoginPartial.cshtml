@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-nav ml-auto" }))
    {
        @Html.AntiForgeryToken()
        <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null,
                    htmlAttributes: new { @class = "nav-link btn btn-outline-dark mr-1", title = "Manage" })
            </li>
            <li><a class="nav-link btn btn-success text-white" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item active">
            @Html.ActionLink("Giriş Yap", "Login", "Account", routeValues: null,
                htmlAttributes: new { @class = "nav-link btn btn-outline-dark mr-1", id = "loginLink" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Kayıt Ol", "Register", "Account", routeValues: null,
                htmlAttributes: new { @class = "nav-link btn btn-success text-white", id = "registerLink" })
        </li>
    </ul>
}
